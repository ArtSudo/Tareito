generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int           @id @default(autoincrement())
  email     String        @unique
  password  String
  name      String
  inbox     InboxItem[]   // Relación uno a muchos
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model InboxItem {
  id         Int      @id @default(autoincrement())
  content    String   // El texto capturado
  processed  Boolean  @default(false) // Si ya fue movido a otro módulo
  userId     Int
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  user       User    @relation(fields: [userId], references: [id], onDelete: Cascade)
}
